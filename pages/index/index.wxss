/**index.wxss**/
.navtab{
  width:100%;
  display: flex;
  justify-content: space-around;
  padding:10px 0;
}
.navtab view{
  display: flex;
  flex-direction: column
}
.navtab image{
  width:40px;
  height: 40px;
}
.tit{
  width:100%;
  display: flex;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
  padding:15px 10px;
}
.left{
  display: flex;
  align-items: center
}
.cf{
  width: 5px;
  height: 15px;
  border-radius:2px;
  background: #ff4d6a;
  display: block;
  margin-right:4px;
}
.bigSize{
  font-size:18px;
}
.smlSize{
  font-size: 12px;
  color:#ccc;
}
.swiper{
  width:100%;
  display: flex;
  padding:10px 0;
}
.swiper view{
  width:65%;
  flex-shrink: 0;
  display: flex;
  flex-direction: column;
}
.swiper view image{
  width:100%;
  height: 100px;
}
